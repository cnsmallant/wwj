<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title-东八区品牌设计-网站管理系统</title>
    <link href="~/Areas/Admin/css/com.css" rel="stylesheet" />
    <link href="~/Areas/Admin/css/style.css" rel="stylesheet" />
    <script src="~/Areas/Admin/js/jquery.min.js"></script>
</head>
<body>
    <div>
        <div class="div_body">
            <div class="div_head">
                <div class="top" style="background:url(/Areas/Admin/images/topbg.jpg) repeat-x;">
                    <div class="topt">
                        <div class="yd">
                            <div class="ind"><a href="/">网站首页</a></div>
                         
                            <div class="shuxian"></div>
                            @{
                                EFClassLibrary.D8WeChatEntities db = new EFClassLibrary.D8WeChatEntities();
                                var uname = TDESHelper.DecryptString(Request.Cookies["uname"].Value);
                                var upwd = Request.Cookies["upwd"].Value;
                                var ant_admin = db.ant_admin.Where(u => u.ant_admin_name == uname & u.ant_admin_pwd == upwd).SingleOrDefault();
                                ViewBag.username=ant_admin.ant_admin_name;
                            }
                            <div class="user"><a href="@Url.Action("UserPwd", "Home")">@ViewBag.username</a></div>
                            <div><a href="@Url.Action("Logout","Home")">退出</a></div>
                        </div>
                    </div>
                    <div class="tdh" id="tdh">
                        <ul>
                            <li class="li1xz"><a href="@Url.Action("Index","Home")">后台首页</a></li>
                            <li><a href="@Url.Action("Index", "Building")">功能操作</a></li>
                            @*<li><a href="#">温馨推荐</a></li>*@
                            @*<li><a href="#">产品中心</a></li>
                <li><a href="#">人才招聘</a></li>
                <li><a href="#">联系我们</a></li>
                <li><a href="@Url.Action("Index", "Sys")">系统管理</a></li>*@
                        </ul>
                    </div>
                </div>
            </div>
            <div class="div_content">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>
<script>
    var myA = document.getElementById("tdh").getElementsByTagName("a");
    var myLi = document.getElementById("tdh").getElementsByTagName("li");
    var myURL = document.location.href;
    for (var i = 1; i < myA.length; i++) {
        var links = myA[i].getAttribute("href");
        var myURL = document.location.href;
        if (myURL.indexOf(links) != -1) {
            myLi[i].className = "xz";
            myLi[0].className = "";
        }
    }
</script>