@{
    ViewBag.Title = "分配管理员";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPage.cshtml";
}

<div class="div_left">
    <div class="left">
        @Html.Partial("LeftPartialPage")
    </div>
</div>
<div class="div_right">
    <div class="item">
        <div class="ltitle">分配管理员</div>

        <div class="tishi">
            <strong>操作说明：</strong><br />
            <span>
                1.可添加在线客服，访问统计，网站分享等第三方js脚本代码。支持同时使用多个代码。<br />
                2.请尽可能添加知名度高、认可度高的第三方代码，以确保网站安全。<br />
                3.由于添加不安全代码引起的网站访问异常、网站挂马等情况本公司概不负责。<br />
            </span>
        </div>
        @using (Html.BeginForm("UserDistribution", "Home", FormMethod.Post))
        {
            <div class="con">

                <table width="800" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <td width="100" height="40" align="right">管理员登录名称：</td>
                        <td width="670">
                            @Html.TextBox("ant_admin_name") <font style="color:red">只需要输入登录名称，登录密码自动初始化为123456</font>
                        </td>
                    </tr>
                    <tr>
                        <td height="30">&nbsp;</td>
                        <td height="40"><input class="btn" id="submit" type="submit" value="保　存" /></td>
                        <td>&nbsp;</td>
                        <td>&nbsp;</td>
                    </tr>
                </table>

            </div>}
    </div>
</div>
<script>
    var ant_admin_name = $("#ant_admin_name");
 
    var submit = $("#submit");
    submit.click(function () {
        if (ant_admin_name.val() == null || ant_admin_name.val() == "") {
            alert("请输入登录名称！");
            return false;
        }
    });

</script>