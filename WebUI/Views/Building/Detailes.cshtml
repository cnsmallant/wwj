@{
    ViewBag.Title = ViewBag.ant_singlepage_title;
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <img src="@ViewBag.com_img_src" style="width:100%;height:150px;" />
    </div>

    <div class="row">
        <div class="col-lg-12 text-center" style="color:#503729;margin-top:10px;">
            <span class="text-center" style="font-size:18px;font-family:SimHei">@ViewBag.ant_singlepage_title</span><br />

            <span class="text-center">
                <img src="/images/pattern_icon.png" style="height:30px;" />
            </span>

        </div>
        <div class="col-lg-12" style="color:#503729;margin-top:10px;padding-left:20px;">
            @Html.Raw(ViewBag.ant_singlepage_content)
        </div>
        <div class="col-lg-12">
            <p class="text-center" style="font-family:Aparajita_Italic;font-size:16px; color:#503729">—End—</p>
        </div>
        <div class="col-lg-12" style="color:#503729;margin-top:10px;border-top:1px solid #503729;padding-top:10px; line-height:10px">
            <p class="text-center">青岛市文物局</p>
            <p class="text-center">青岛房产经营中心</p>
            <p class="text-center">青岛城发文化建筑保护有限公司</p>
        </div>
    </div>

</div>
