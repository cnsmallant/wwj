@{
    ViewBag.Title = "建筑文化";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <img src="@ViewBag.com_img_src" style="width:100%;height:150px;" />
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-12" style="border-bottom:1px solid #e5e5e5; padding:10px">
                <div id="container">
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Hidden("TotalPages")
<script>
    var container = $("#container");
    var TotalPages = $("#TotalPages");
    var htmlstr = "";
    var pageTotal = parseInt(parseInt(TotalPages.val()) % 20);
    var CurPage = 1;
    $(function () {
        $.ajax({
            type: "GET",
            dataType: "JSON",
            url: "/Building/Culture?classstr=culture&CurPage=" + CurPage,
            success: function (data) {
                $.each(data, function (k, v) {
                    htmlstr += " <a href='/Building/Detailes/" + v.ant_singlepage_id + "' style='color:#967f72; text-decoration:none'>    <div class='media'> <div class='media-left pull-left'> <img class='media-object img-circle' src='" + v.com_img_src + "' style='height:60px; width:60px; border-radius:30px'>  </div>  <div class='media-body'>   <h4 class='media-heading' style='font-size:16px; color:#503729'>" + v.ant_singlepage_title + "</h4>  <p style='font-size:12px;'>" + v.ant_singlepage_description + "</p>  </div> </div> </a>";
                });
                container.html(htmlstr);
            }
        });
    });

    $(document).ready(function () {
        $(window).scroll(function () {
            if ($(document).scrollTop() >= $(document).height() - $(window).height()) {
                CurPage++;
                if (CurPage <= pageTotal) {
                    $.ajax({
                        type: "GET",
                        dataType: "JSON",
                        url: "/Building/Culture?classstr=culture&CurPage=" + CurPage,
                        success: function (data) {
                            $.each(data, function (k, v) {
                                htmlstr += " <a href='/Building/Detailes/" + v.ant_singlepage_id + "' style='color:#967f72; text-decoration:none'>    <div class='media'> <div class='media-left pull-left'> <img class='media-object img-circle' src='" + v.com_img_src + "' style='height:60px; width:60px; border-radius:30px'>  </div>  <div class='media-body'>   <h4 class='media-heading' style='font-size:16px; color:#503729'>" + v.ant_singlepage_title + "</h4>  <p style='font-size:12px;'>" + v.ant_singlepage_description + "</p>  </div> </div> </a>";
                            });
                            container.html(htmlstr);
                        }
                    });
                }
            }
        });
    });

</script>