@{
    ViewBag.Title = ViewBag.ant_trunk_title;
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}


<div class="container-fluid">
    <div class="row">

        <img src="@ViewBag.ant_trunk_img" style="height:150px; width:100%" />

    </div>
    <div class="row">
        <div class="col-lg-12 text-center" style="color:#503729;margin-top:10px;">
            <span class="text-center" style="font-size:18px;font-family:SimHei">@ViewBag.ant_trunk_title</span><br />
            <span class="text-center">
                <img src="/images/pattern_icon.png" style="height:30px;" />
            </span>

        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 ">
            <div class="col-lg-12" style="color:#503729;margin-top:10px;border-bottom :1px solid #998e85;padding-left:20px;">
                <span class="text-left"> 保护级别： @ViewBag.ant_trunk_area </span>

            </div>
            <div class="col-lg-12 " style="color:#503729;margin-top:10px;border-bottom :1px solid #998e85;padding-left:20px;">
                <span class="text-left"> 建筑地址： @ViewBag.ant_trunk_summary</span>

            </div>
            <div class="col-lg-12 " style="color:#503729;margin-top:10px;border-bottom :1px solid #998e85;padding-left:20px;">
                <span class="text-left"> 建造年代： @ViewBag.ant_content_tags </span>

            </div>


        </div>
    </div>

    <div class="row" style="margin-bottom:50px;">
        <div class="col-lg-12 ">
            <div class="col-lg-12" style="color:#503729;margin-top:10px;padding-left:20px;">
                @Html.Raw(ViewBag.ant_trunk_content)
            </div>
            <div class="col-lg-12">
                <p class="text-center" style="font-family:Aparajita_Italic;font-size:16px; color:#503729">—End—</p>
            </div>
            <div class="col-lg-12" style="color:#503729;margin-top:10px;border-top:1px solid #503729;padding-top:10px; line-height:10px;">
                <p class="text-center">青岛市文物局</p>
                <p class="text-center">青岛房产经营中心</p>
                <p class="text-center">青岛城发文化建筑保护有限公司</p>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-default navbar-fixed-bottom" style="height:50px; text-align:center;background-color:#503729; color:#3e2a1e">
        <div class="container">
            <div style="margin-top:15px; font-size:16px;">
                <a href="@Url.Action("BuildingDetailesShowPic", "Building", new { id = ViewBag.ant_trunk_id })" style="color:#fff"><span class="glyphicon glyphicon-picture"></span>&nbsp;查看图册</a>&nbsp;
                &brvbar;&nbsp;
                <a href="@Url.Action("BuildingMap", "Building", new { id =ViewBag.ant_trunk_id})" style="color:#fff;"><span class="glyphicon glyphicon-map-marker"></span>&nbsp;查看地图</a>
            </div>
        </div>
    </nav>
</div>
