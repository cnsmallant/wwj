@{
    ViewBag.Title = "建筑查询";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}
<style>

</style>
<div class="container-fluid">
    <div class="row" style="background-color:#e3dfd4">
        <div style="width:100%;height:100%; overflow:hidden;z-index:-1">
            <img src="/images/SearchBuilding.png" style="width: 100%; height: 100%;" />
        </div>
        <div style="position:fixed; top:20px; color:#503729;font-size:30px; font-family:kaiti_GB2312;font-weight:bold;width:100%;">
            <div class="col-lg-12">
                <p>青岛</p>
                <p>文物保护</p>
                <p>建筑</p>
            </div>

        </div>
        <div style="position:fixed; bottom:0px; color:#503729; text-align:center;width:100%; padding:30px;">
            <div class="text-center" style="float:left; width:100%">
                <div class="Building_search">
                    <div class="Building_search_btn">
                        <a class="glyphicon glyphicon-search" href="javascript:;"></a>
                    </div>
                    <div class="Building_search_input">
                        <input id="searchvalue" placeholder="请输入建筑名称或门牌号" />
                    </div>
                </div>
            </div>
            <div style=" text-align:center; margin-top:10px;float:left;width:100%">
                <a id="search" href="javascript:;" style="height:35px; background-color:#503729;color:#fff; display:block;font-size:16px; padding:8px; text-decoration:none;">查&nbsp;&nbsp;询</a>
            </div>
            <p class="text-left">热门查询：公主楼、花石楼</p>
            <p class="text-center">青岛市文物局</p>
            <p class="text-center">青岛房产经营中心</p>
            <p class="text-center">青岛城发文化建筑保护有限公司</p>

        </div>
    </div>
</div>
<script>
    var search = $("#search");
    var searchvalue = $("#searchvalue");
    search.click(function () {
        window.location.href = "/Building/BuildingSearch/" + encodeURIComponent(searchvalue.val());
    });
</script>